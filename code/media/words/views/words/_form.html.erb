<%= form_for(@word, html: { class: 'form-horizontal' }) do |f| %>
  <% if @word.errors.any? %>
    <div id="error_explanation" class="round">
      <ul>
      <% @word.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.control_group(:recording_id) do %>
    <%= f.number_field :recording_id %>
  <% end %>

  <%= f.control_group(:body) do %>
    <%= f.text_field :body %>
  <% end %>

  <%= f.control_group(:start_time) do %>
    <%= f.text_field :start_time %>
  <% end %>

  <%= f.control_group(:end_time) do %>
    <%= f.text_field :end_time %>
  <% end %>

  <%= f.control_group(:confidence) do %>
    <%= f.text_field :confidence %>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
  </div>
<% end %>
